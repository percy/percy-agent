{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./dist",
    "pretty": true,
    "rootDirs": [
      "./src"
    ],
    "strict": true,
    "target": "es2017"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
